<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="container">
      <div class="" id="header">
        <div id='indexHeader'>DCDB INDEX PAGE</div>
        <a class="waves-effect btn-small black-text pink lighten-5 " href="/dcdb/newcoupon">enter new d/c</a>
      </div>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Item</th>
            <th>Company</th>
            <th>exp date</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
        <% for(let i = 0; i < coupons.length; i++) { %>
          <tr>
            <th>
              <form class="" action="/dcdb/<%=coupons[i].id%>?_method=DELETE" method="POST">
                <input type="submit" name="" value="delete"/>
              </form>
            </th>
            <th><%= coupons[i].itemName %></th>
            <th>by <%= coupons[i].makerName %></th>
            <th><%= coupons[i].expirationDate %></th>
            <th><a href="/dcdb/<%= coupons[i].id %>" class="waves-effect waves-light btn-small white-text light-blue darken-2">details</a></th>
          </tr>
        <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
